<%- include('partials/header.ejs') %> 

<div class="container">
    <div class="card">
        <div class="card-header">
            <h2 class="mb-4 center-text">Novo cadastro</h2>
            <hr>
            <form method="POST" action="createClient">
                <label>Nome de usuário:</label>
                <input type="text" name="usuario" id="usuario" placeholder="Insira o seu nome de usuário" class="form-control">
                                   
                <label>Senha:</label>
                <input type="text" name="senha" id="senha" placeholder="Insira a sua senha" class="form-control">
                                   
                <label>Nome completo:</label>
                <input type="text" name="name" id="name" placeholder="Insira o seu nome" class="form-control">
                                   
                <label>Telefone:</label>
                <input type="text" name="tel" id="tel" placeholder="Insira o seu telefone" class="form-control cpf">
                
                <label>Cidade:</label>
                <input type="text" name="cidade" id="cidade" placeholder="Insira a sua cidade" class="form-control">

                <label>Estado:</label>
                <input type="text" name="estado" id="estado" placeholder="Insira o seu estado" class="form-control">
                
                <label>CEP:</label>
                <input type="text" name="cep" id="cep" placeholder="Insira o seu cep" class="form-control">
                
                <label>Ramo de atução:</label>
                <input type="text" name="cep" id="cep" placeholder="Insira o seu ramo" class="form-control">
                
                <label>Raça/cor:</label>
                <input type="text" name="cep" id="cep" placeholder="Insira a sua cor ou raça" class="form-control">
                <br>
                <button class="btn btn-dark">Cadastrar</button>
            </form>
            <hr>
        </div>
    </div>
</div>
<%- include('partials/footer.ejs') %>